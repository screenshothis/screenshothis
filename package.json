{
  "name": "screenshothis",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "db:push": "turbo -F @screenshothis/server db:push",
    "db:studio": "turbo -F @screenshothis/server db:studio",
    "dev": "turbo dev",
    "dev:server": "turbo -F @screenshothis/server dev",
    "dev:web": "turbo -F @screenshothis/web dev",
    "prepare": "husky || true && vibe-rules install cursor",
    "typecheck": "turbo typecheck"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "9.1.7",
    "turbo": "2.5.4",
    "vibe-rules": "0.2.56"
  },
  "packageManager": "bun@1.2.15",
  "trustedDependencies": [
    "@biomejs/biome",
    "@clerk/shared",
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "msgpackr-extract",
    "puppeteer",
    "unrs-resolver"
  ]
}
