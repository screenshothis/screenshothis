{
	"name": "screenshothis",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"dev": "turbo dev",
		"dev:native": "turbo -F native dev",
		"dev:server": "turbo -F server dev",
		"dev:web": "turbo -F web dev",
		"prepare": "husky || true",
		"typecheck": "turbo typecheck"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"husky": "9.1.7",
		"turbo": "2.5.3"
	},
	"packageManager": "bun@1.2.12",
	"trustedDependencies": [
		"@biomejs/biome",
		"@clerk/shared",
		"@parcel/watcher"
	]
}
